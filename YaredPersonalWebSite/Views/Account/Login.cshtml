@model YaredPersonalWebSite.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
@Styles.Render("~/UI/assets/css/Custom/")
<hgroup class="title">
    @*<h1>@ViewBag.Title.</h1>*@
</hgroup>
<section id="loginForm">
@*    <h2>Use a local account to log in.</h2>*@
    <div class="site__container">
        <div class="grid__container">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form form--login" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                    @*<legend>Log in Form</legend>*@
                <div class="form__field">
                    @*@Html.LabelFor(m => m.UserName, new{@class="login__username"})*@
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form__input", placeholder = @Html.DisplayNameFor(m => m.UserName) })
                </div>
                @Html.ValidationMessageFor(m => m.UserName)
                <div class="form__field">
                    @*@Html.LabelFor(m => m.Password, new{@class="login__username"})*@
                    @Html.PasswordFor(m => m.Password, new { @class = "form__input", placeholder = @Html.DisplayNameFor(m => m.Password) })
                </div>
                @Html.ValidationMessageFor(m => m.Password)
                <div class="form__field">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </div>
                <div class="form__field">
                    <input type="submit" value="Log in" />
                </div>
                <p class="text--center">
                    @Html.ActionLink("Register", "Register") if you don't have an account.
                </p>  
            }
        </div>
    </div>
</section>

