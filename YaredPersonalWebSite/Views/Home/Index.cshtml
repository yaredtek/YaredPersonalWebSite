    <!-- Contact start -->
    <section id="contact" class="pfblock">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="pfblock-header">
                        <h2 class="pfblock-title">Drop me a line</h2>
                        <div class="pfblock-line"></div>
                        <div class="pfblock-subtitle">
                            Your email will be answered ASAP.		
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="ajax-response" id="ajax-status"></div>
                    @using (Ajax.BeginForm("SendMail", "Common",
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "target",
                            OnFailure = "ShowError()",
                            OnSuccess = "ShowSuccess()"
                        }
                        ))
                    {
                        <div id="target" class="ajax-hidden">
                            <div class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Name, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Name) }) @Html.ValidationMessageFor(model => model.Name)
                            </div>

                            <div class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Email, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Email), type = "email" }) @Html.ValidationMessageFor(model => model.Email)
                            </div>

                            <div class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Subject, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Subject) }) @Html.ValidationMessageFor(model => model.Subject)
                            </div>

                            <div class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Message, new { @class = "sr-only" })
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Message), rows = 7 }) @Html.ValidationMessageFor(model => model.Message)
                            </div>
                            <input type="submit" class="btn btn-primary" value="Send Message">
                        </div>
                    }
                    <script>
                        function ShowError() {
                            $("#ajax-status").removeClass();
                            $("#ajax-status").addClass("center alert alert-error");
                            $("#ajax-status").html("<strong>Error!</strong> There was an error sending the email. Please try again later.");
                        }

                        function ShowSuccess() {
                            $("#ajax-status").html("");
                            $("#ajax-status").removeClass();
                            $("#target").removeClass();
                            $("#target").addClass("center alert alert-success");
                        }
                    </script>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact end -->

