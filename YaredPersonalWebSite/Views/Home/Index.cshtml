            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="ajax-response" style="margin-bottom:5px;" id="ajax-status"></div>
                    @using (Ajax.BeginForm("SendMail", "Common",
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "ajax-response",
                            OnFailure = "ShowError()",
                            OnSuccess = "ShowSuccess()",
                            OnBegin = "onBeginFunc"
                        }
                        ))
                    {
                        <div id="target" class="ajax-hidden">
                            <div style="margin-top:5px;" class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Name, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Name) }) @Html.ValidationMessageFor(model => model.Name, String.Empty, new { @class = "text-danger" })
                            </div>

                            <div class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Email, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Email), type = "email" }) @Html.ValidationMessageFor(model => model.Email, String.Empty, new { @class = "text-danger" })
                            </div>

                            <div class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Subject, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Subject) }) @Html.ValidationMessageFor(model => model.Subject, String.Empty, new { @class = "text-danger" })
                            </div>

                            <div class="form-group wow fadeInUp">
                                @Html.LabelFor(model => model.Message, new { @class = "sr-only" })
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Message), rows = 7 }) @Html.ValidationMessageFor(model => model.Message, String.Empty, new { @class = "text-danger" })
                            </div>
                            <input type="submit" id="submitemail" class="btn btn-primary" value="Send Message">
                        </div>
                    }
                    <script>
                        function ShowError() {
                            $("#ajax-status").html("");
                            $("#ajax-status").removeClass();
                            $("#ajax-status").addClass("center clear-fix col-md-12 bg-danger text-white");
                            $("#ajax-status").html("<strong>Error!</strong> There was an error sending the email. Please try again later.");
                            $("#submitemail").prop("disabled", false);
                        }
                        function onBeginFunc() {
                            $("#submitemail").prop("disabled", true);
                        }
                        function ShowSuccess() {
                            $("#ajax-status").html("");
                            $("#ajax-status").removeClass();
                            //$("#target").removeClass();
                            $("#Name").val('');
                            $("#Email").val('');
                            $("#Subject").val('');
                            $("#Message").val('');
                            $("#ajax-status").html("<strong>Success!</strong> Message Sent. We will contact you ASAP. Thanks.");
                            $("#ajax-status").addClass("center col-md-12 bg-success text-white");
                            $("#submitemail").prop("disabled", false);
                        }
                    </script>
                </div>
            </div>
        </div>
    </section>
